algoritmo "Condicionais I"

var
velocidadeVeiculo, velocidadeLeve, velocidadeMedia, velocidadeGrave, velocidadeGravissima: real

inicio
velocidadeLeve <- 40 * 1.1
velocidadeMedia <- 60
velocidadeGrave <- 80
velocidadeGravissima <- 100

Escreval ("Informe a velocidade que o veiculo passou: ")
leia (velocidadeVeiculo)

se velocidadeVeiculo <= velocidadeLeve entao
    Escreval ("Insento da multa")
senao
    se velocidadeVeiculo <= velocidadeMedia entao
    Escreval ("3 pontos na carteira e R$ 88,38 de multa")
senao
    se velocidadeVeiculo <= velocidadeGrave entao   
    Escreval ("5 pontos na carteira e R$ 195,23 de multa")
senao
    se velocidadeVeiculo <= velocidadeGravissima entao   
    Escreval ("7 pontos na carteira e R$ 880,41 de multa")
senao   
    Escreval ("10 pontos na carteira e R$ 999,99 de multa")
fimse
fimse
fimse
fimse
fimalgoritmo
