algoritmo "Exerc√≠cios Enquanto"

var
maisNovo, maisIdoso, qtdEntrevistados, idadeInformada: inteiro
mediaIdade, porcentagemMenosExperiente, qtdMenoresIdade, somaIdades : real

inicio
maisNovo <- 9999
maisVelho <- 0
qtdEntrevistados <- 0
qtdMenoresIdade <- 0
enquanto qtdEntrevistados < 5 faca
    Escreval ("Por gentileza, informe a sua idade")
    leia (idadeInformada)

    se idadeInformada >= maisvelho entao
        mais velho <- idadeInformada
    fimse
    se idadeInformada =< maisNovo entao
        maisNovo <- idadeInformada
    fimse
    se idadeInformada < 18 entao
        qtdMenoresIdade <- qtdMenoresIdade + 1
    fimse
somaIdades <- somaIdades + idadeInformada
qtdEntrevistados <- qtdEntrevistados + 1
fimenquanto

Escreval ("Mais novo", maisNovo)
Escreval ("Mais idoso", maisIdoso)
porcentagemMenosExperiente <- (qtdMenoresIdade / 5) * 100
Escreval ("Porcentagem menor idade", porcentagemMenosExperiente, "%")
mediaIdade <- somaIdades / 5
Escreval ("Media de idade", mediaIdade)

fimalgoritmo
